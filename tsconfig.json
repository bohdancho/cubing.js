{
  "compilerOptions": {
    "allowJs": true,
    "alwaysStrict": true,
    "declaration": true,
    "declarationMap": true,
    "lib": ["esnext", "dom"],
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "es2020",
    "module": "esnext",
    "resolveJsonModule": true,
    "importsNotUsedAsValues": "error",
    "outDir": "dist"
  },
  "include": ["src/**/*", "script/**/*"],
  "exclude": [
    "src/static",
    "src/cubing/search/worker-inside-generated*",
    "dist"
  ]
}
